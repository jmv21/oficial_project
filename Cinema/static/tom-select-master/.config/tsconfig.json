{
	"include": ["../src/**/*"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"target": "esnext",
		"module": "esnext",
		"noUnusedLocals": true,

		"noUnusedParameters": false,
		"noImplicitAny": false,
		"strictPropertyInitialization": false,
		"strictBindCallApply": false,

		"declaration": true,
		"declarationDir": "../dist/types",
		"moduleResolution": "node"
	},
}
